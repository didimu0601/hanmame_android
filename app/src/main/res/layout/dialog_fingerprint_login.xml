<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical">

    <TextView android:id="@+id/text_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/content_font_big_size"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/image_icon"/>
    <ImageView android:id="@+id/image_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:src="@drawable/ic_prompt_fingerprint"
               app:layout_constraintTop_toBottomOf="@+id/text_title"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>
    <TextView android:id="@+id/text_login_status"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/content_font_size"
              android:singleLine="false"
              android:gravity="center"
              android:layout_marginTop="@dimen/default_margin"
              app:layout_constraintTop_toBottomOf="@+id/image_icon"
              app:layout_constraintBottom_toTopOf="@+id/text_description"/>
    <TextView android:id="@+id/text_description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/touch_fingerprint"
              android:textSize="@dimen/content_font_size"
              android:singleLine="false"
              android:gravity="center"
              android:layout_marginTop="@dimen/default_margin"
              app:layout_constraintTop_toBottomOf="@+id/text_login_status"/>
    <TextView android:id="@+id/text_cancel"
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:text="@string/action_cancel"
              android:textSize="@dimen/content_font_size"
              android:layout_marginTop="@dimen/default_margin"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@id/text_description"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintHorizontal_bias="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>