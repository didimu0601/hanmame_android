<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:id="@+id/text_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/title_login"
              android:textColor="@color/color_ffffff"
              android:textSize="@dimen/content_font_big_size"
              android:textStyle="bold"
              android:gravity="center"
              android:layout_marginBottom="7dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/image_status" />
    <ImageView android:id="@+id/image_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_prompt_fingerprint"
               android:layout_marginTop="@dimen/default_big_margin"
               app:layout_constraintTop_toBottomOf="@+id/text_title"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toTopOf="@+id/text_status"/>
    <ImageView android:id="@+id/image_status_ani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prompt_fingerprint"
                android:layout_marginTop="@dimen/default_big_margin"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/text_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_status"/>
    <TextView android:id="@+id/text_status"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text=""
              android:textColor="@color/color_ffffff"
              android:textSize="@dimen/content_font_size"
              android:layout_marginTop="@dimen/default_margin"
              app:layout_constraintTop_toBottomOf="@+id/image_status"
              app:layout_constraintBottom_toTopOf="@+id/text_description"/>
    <TextView android:id="@+id/text_description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/touch_fingerprint"
              android:textColor="@color/color_ffff00"
              android:textSize="@dimen/content_font_big_size"
              android:singleLine="false"
              android:gravity="center"
              android:layout_marginTop="1dp"
              app:layout_constraintTop_toBottomOf="@+id/text_status"
              app:layout_constraintBottom_toTopOf="@+id/barrier_button"/>

    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="button_input_login,button_cancel"/>

    <Button android:id="@+id/button_input_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_input_login"
            android:textColor="#99000000"
            android:textSize="@dimen/button_font_size"
            android:textStyle="bold"
            android:background="@drawable/white_round_fill"
            android:padding="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_big_margin"
            android:onClick="onClick"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/text_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_cancel"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/button_font_size"
            android:textStyle="bold"
            android:background="@drawable/white_round_border"
            android:padding="@dimen/default_padding"
            android:visibility="visible"
            android:layout_marginTop="@dimen/default_big_margin"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@+id/text_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>